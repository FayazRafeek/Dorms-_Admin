<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ADMIN DASHBOARD"
            android:layout_marginTop="@dimen/_12sdp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_room_details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/room_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_bed_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Room Details"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/accodomation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/accomodation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    app:tint="@color/mint"
                    android:src="@drawable/ic_stay">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Accomodation"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/stu_details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:id="@+id/student_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_people">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Student Details"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_food_bank_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="food menu"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/fees"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_attach_money_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Fees"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/leave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    app:tint="@color/mint"
                    android:src="@drawable/ic_room">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Leave Request"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/queries"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="155dp"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/light_shadow"
            app:cardCornerRadius="12dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_baseline_question_mark_24">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Complaints"
                    android:textColor="@color/black"
                    android:textSize="20dp">

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="155dp"
                android:layout_marginHorizontal="8dp"
                app:cardBackgroundColor="@color/light_shadow"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_baseline_logout_24">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="20dp">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.appcompat.widget.LinearLayoutCompat>




    </LinearLayout>









</ScrollView>